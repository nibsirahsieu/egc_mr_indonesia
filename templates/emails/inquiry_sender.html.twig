{% extends 'emails/base.html.twig' %}

{% block body %}
    <h1>Dear {{ first_name }},</h1>
    <spacer size="16"></spacer>
    <row>
        <columns>
            <p>
                Thank you for reaching out to us with your inquiry. Your message is important to us.
            </p>
            <p>
                Our team is currently reviewing your inquiry, and we will make every effort to provide you with a prompt and thorough response.                
            </p>
        </columns>
    </row>
    <spacer size="16"></spacer>
    <row>
        <columns>
            <p>
                <strong>Name</strong><br/>
                {{ name }}
            </p>
            <p>
                <strong>Email Address</strong><br/>
                {{ contact_email }}
            </p>
            <p>
                <strong>Job Title</strong><br/>
                {{ job_title }}
            </p>
            <p>
                <strong>Company Name</strong><br/>
                {{ company_name }}
            </p>
            <p>
                <strong>Country</strong><br/>
                {{ country }}
            </p>
            <p>
                <strong>Phone Number</strong><br/>
                {{ phone_number }}
            </p>
            <p>
                <strong>Message</strong><br/>
                {{ message | raw }}
            </p>
        </columns>
    </row>
{% endblock %}